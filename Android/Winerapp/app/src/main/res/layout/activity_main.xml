<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:background="@drawable/main_bg"
    android:id="@+id/layMain">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bar_bg"
        android:id="@+id/layBar">
        <ImageView
            android:id="@+id/imgLight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bar_light"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <ImageView
            android:id="@+id/imgSwitch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bar_switch"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <ImageView
            android:id="@+id/imgMoto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bar_moto"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <ImageView
            android:id="@+id/imgTurn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bar_turn"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <ImageView
            android:id="@+id/imgTpd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bar_tpd"
            android:layout_weight="1"
            android:onClick="onClick"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/layBar"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgTurnForward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/r01"/>
                <ImageView
                    android:id="@+id/imgTurnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgTurnForward"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/l01"/>
                <ImageView
                    android:id="@+id/imgLightStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ico_light_05"/>
                <ImageView
                    android:id="@+id/imgSwitchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/imgLightStatus"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ico_turn_00"/>
                </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/imgCurMoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/number0"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/m"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imgCurMoto"
                    android:layout_alignBottom="@+id/imgCurMoto"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/imgCurTpd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/number0"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tpd"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imgCurTpd"
                    android:layout_alignBottom="@+id/imgCurTpd"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
